<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <Button
            android:id="@+id/BmiId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="FragmentChangeFunction"
            android:text="Calculate BMI" />

        <Button
            android:id="@+id/FarenhiteID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Farenheit to Celsius"
            android:onClick="FragmentChangeFunction" />

        <Button
            android:id="@+id/CelsiusID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="FragmentChangeFunction"
            android:text="Celsius to Farenheit" />

        <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:name="com.example.finalpractice.BlankFragment"
            android:id="@+id/fragmentID"
            tools:layout="@layout/activity_main">

        </fragment>
    </LinearLayout>

</LinearLayout>